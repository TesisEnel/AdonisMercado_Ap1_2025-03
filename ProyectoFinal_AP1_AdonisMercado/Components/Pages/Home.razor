@page "/"
@attribute [Authorize(Roles = "User")]
@layout EmptyLayout

@inject PedidoServices pedidoServices
@inject DistribuidorServices distribuidorServices
@inject DocumentoServices documentoServices

<div class="container-fluid p-4">

    <div class="text-center mb-4">
        <img src="images/auto-franklin-logo-removebg-preview.png"
             alt="AutoFranklin Logo"
             style="width:180px; height:auto;" />
    </div>

    <h1 class="fw-bold text-center text-dark mb-5">
        Bienvenido al Panel De Usuario
    </h1>

    <div class="row g-4 justify-content-center">

        <!-- DISTRIBUIDORES -->
        <div class="col-12 col-sm-6 col-lg-4">
            <a href="/distribuidores" class="text-decoration-none">
                <div class="card shadow-lg border-0 home-card text-center">
                    <div class="card-body p-4">
                        <i class="fa-solid fa-users text-danger" style="font-size:50px;"></i>
                        <h4 class="mt-3 fw-bold text-dark">Distribuidores</h4>
                        <p class="text-muted">Consulta y administra los distribuidores.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- PEDIDOS -->
        <div class="col-12 col-sm-6 col-lg-4">
            <a href="/pedidos" class="text-decoration-none">
                <div class="card shadow-lg border-0 home-card text-center">
                    <div class="card-body p-4">
                        <i class="fa-solid fa-cart-shopping text-danger" style="font-size:50px;"></i>
                        <h4 class="mt-3 fw-bold text-dark">Pedidos</h4>
                        <p class="text-muted">Administra y revisa los pedidos.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- DOCUMENTOS -->
        <div class="col-12 col-sm-6 col-lg-4">
            <a href="/documentos" class="text-decoration-none">
                <div class="card shadow-lg border-0 home-card text-center">
                    <div class="card-body p-4">
                        <i class="fa-solid fa-file-lines text-danger" style="font-size:50px;"></i>
                        <h4 class="mt-3 fw-bold text-dark">Documentos</h4>
                        <p class="text-muted">Gestiona los documentos de los pedidos.</p>
                    </div>
                </div>
            </a>
        </div>

    </div>

</div>

@code {
    public int TotalDistribuidores { get; set; }
    public int PedidosActivos { get; set; }
    public int PedidosEnviados { get; set; }
    public int DocumentosPendientes { get; set; }
    public int PedidosNoEnviados { get; set; }

    public List<Pedido> UltimosPedidos { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        TotalDistribuidores = (await distribuidorServices.ListarDistribuidores(d => d.isActive)).Count;

        var pedidos = await pedidoServices.ListarPedidos(p => p.isActive);
        PedidosActivos = pedidos.Count;
        PedidosEnviados = pedidos.Count(p => p.Estado == "Enviado");
        PedidosNoEnviados = pedidos.Count(p => p.Estado == "No Enviado");

        UltimosPedidos = pedidos
            .OrderByDescending(p => p.PedidoId)
            .Take(6)
            .ToList();
    }
}

