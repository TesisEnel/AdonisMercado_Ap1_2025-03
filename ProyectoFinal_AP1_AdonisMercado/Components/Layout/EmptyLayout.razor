@inherits LayoutComponentBase
@inject AuthenticationStateProvider AuthStateProvider

<div style="position: fixed; top: 20px; right: 20px; z-index: 9999;">
    <Toasts class="p-3"
            AutoHide="true"
            Delay="4000"
            Placement="ToastsPlacement.TopRight"
            ShowCloseButton="true" />
</div>

<nav class="navbar navbar-expand-lg py-3 shadow-sm" style="background:#BD1717;">
    <div class="container-fluid">
        <button class="navbar-toggler text-white"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#topNavbar"
                aria-controls="topNavbar"
                aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon" style="filter: invert(1);"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-end" id="topNavbar">

            <ul class="navbar-nav mb-2 mb-lg-0 gap-2">

                @if (isAuthenticated)
                {
                    <li class="nav-item">
                        <a href="/Account/Manage"
                           class="btn btn-outline-light d-flex align-items-center gap-2 w-100" style="background:#BD1717; color:white; border-color:#BD1717;">
                            <i class="fa-solid fa-user"></i> @userName
                        </a>
                    </li>

                    <li class="nav-item">
                        <a href="/DoLogout"
                           class="btn btn-light d-flex align-items-center gap-2 w-100" style="background:#BD1717;color:white;">
                            <i class="fa-solid fa-right-from-bracket"></i> Salir
                        </a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a href="/Account/Login"
                           class="btn btn-light w-100" style="background:#BD1717;color:white;border-color:#BD1717;">
                            Iniciar sesión
                        </a>
                    </li>
                }

            </ul>

        </div>

    </div>
</nav>



<div class="container py-4">
    @Body
</div>

@code {
    private bool isAuthenticated;
    private string? userName;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        isAuthenticated = user.Identity?.IsAuthenticated ?? false;
        userName = isAuthenticated ? user.Identity?.Name : "";
    }
}
