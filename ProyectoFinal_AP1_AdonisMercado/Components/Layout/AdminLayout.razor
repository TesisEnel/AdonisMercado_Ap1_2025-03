@inherits LayoutComponentBase
@inject AuthenticationStateProvider AuthStateProvider

<div style="position: fixed; top: 20px; right: 20px; z-index: 9999;">
    <Toasts class="p-3"
            AutoHide="true"
            Delay="4000"
            Placement="ToastsPlacement.TopRight"
            ShowCloseButton="true" />
</div>

<nav class="navbar navbar-expand-lg py-3" style="background:#BD1717; color:white;">
    <div class="container-fluid">
        <a class="navbar-brand d-flex align-items-center" href="/admin">
            <img src="images/autofranklin-layout-removebg-preview.png"
                 alt="AutoFranklin Logo"
                 style="height:45px; width:auto;" class="me-4" />
        </a>

        <button class="navbar-toggler text-white"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#adminNavbar"
                aria-controls="adminNavbar"
                aria-expanded="false"
                aria-label="Toggle navigation"
                style="border:none;">
            <span class="navbar-toggler-icon" style="filter:invert(1);"></span>
        </button>

        <div class="collapse navbar-collapse" id="adminNavbar">

            <ul class="navbar-nav me-auto gap-2 mt-3 mt-lg-0">

                <li class="nav-item">
                    <NavLink href="/admin" class="nav-link text-white fw-semibold">Inicio</NavLink>
                </li>

                <li class="nav-item">
                    <NavLink href="/deshabilitados" class="nav-link text-white fw-semibold">Deshabilitados</NavLink>
                </li>

                <li class="nav-item">
                    <NavLink href="/vehiculos" class="nav-link text-white fw-semibold">Vehículos</NavLink>
                </li>

            </ul>

            <div class="d-flex align-items-center gap-3 mt-3 mt-lg-0">

                @if (isAuthenticated)
                {
                    <a href="/Account/Manage"
                       class="btn btn-outline-light d-flex align-items-center gap-2" style="background:#BD1717;color:white;border-color:#BD1717;">
                        <i class="fa-solid fa-user"></i> @userName
                    </a>

                    <a href="/DoLogout"
                       class="btn btn-light d-flex align-items-center gap-2" style="background:#BD1717;color:white;border-color:#BD1717;">
                        <i class="fa-solid fa-right-from-bracket"></i> Salir
                    </a>
                }
                else
                {
                    <a href="/Account/Login"
                       class="btn btn-light" style="background:#BD1717;color:white;border-color:#BD1717;">
                        Iniciar sesión
                    </a>
                }

            </div>

        </div>
    </div>
</nav>

<div class="container-fluid py-4">
    @Body
</div>

@code {
    private bool isAuthenticated;
    private string? userName;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        isAuthenticated = user.Identity?.IsAuthenticated ?? false;
        userName = isAuthenticated ? user.Identity?.Name : "";
    }
}
